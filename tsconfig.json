{
    "compilerOptions": {
      "lib": ["ES2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
      "module": "NodeNext",
      "target": "ES2022",                            
                                   
      "strict": true,        
      "esModuleInterop": true,       
      "skipLibCheck": true,                               
      "typeRoots": ["./types"],
                                 
      "outDir": "./build"                      
    },
    "ts-node": {
      "esm": true,
      "transpileOnly": true
    },
    "include": [
      "src",
      "environment.d.ts",
      "types/index.d.ts"  
    ]
  }